<?xml version="1.0" encoding="UTF-8"?>
<project default="test" name="eu.supersede.feedbackgathering.reconfiguration.uml2json">
    <property name="ECLIPSE_HOME" value="../../../eclipse/modeling-neon/eclipse"/>
    <property name="ECLIPSE_WORKSPACE" value="../.."/>

    <!-- The classpath with only the dependencies used by the project -->
    <path id="eu.supersede.feedbackgathering.reconfiguration.uml2json.libraryclasspath">
        <pathelement location="${ECLIPSE_WORKSPACE}/eu.supersede.feedbackgathering.reconfiguration.uml2json/bin"/>
    </path>

    <path id="eu.supersede.feedbackgathering.reconfiguration.uml2json.classpath">
        <path refid="eu.supersede.feedbackgathering.reconfiguration.uml2json.libraryclasspath"/>
    </path>

    <!-- The classpath with only the jars available in the plugin folder of Eclipse -->
    <path id="eu.supersede.feedbackgathering.reconfiguration.uml2json.libraryclasspath.alljars">
        <pathelement location="../eu.supersede.feedbackgathering.reconfiguration.uml2json/bin"/>
        <fileset dir="${ECLIPSE_HOME}/plugins/" includes="*.jar"/>
    </path>

    <path id="eu.supersede.feedbackgathering.reconfiguration.uml2json.classpath.alljars">
        <path refid="eu.supersede.feedbackgathering.reconfiguration.uml2json.libraryclasspath.alljars"/>
    </path>

    <!-- The default task with the jars used by this project -->
    <target name="test">
        <java classname="eu.supersede.feedbackgathering.reconfiguration.uml2json.main.Test" classpathref="eu.supersede.feedbackgathering.reconfiguration.uml2json.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>

    <!--
        In case of problem you can also try with all the jar available in your Eclipse
        Keep in mind that having two versions of the same jar can create problems
    -->
    <target name="test.alljars">
        <java classname="eu.supersede.feedbackgathering.reconfiguration.uml2json.main.Test" classpathref="eu.supersede.feedbackgathering.reconfiguration.uml2json.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>
</project>
